@model IEnumerable<TestLocaltoServer.tblMovieDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
@if (User.Identity.Name != "admin@admin.com")
{
    @Html.ActionLink("Create New", "Create")
}
</p>
<table class="table table-hover">
    <tbody>
        <tr>
            @if (User.Identity.Name == "admin@admin.com")
            {
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.UserName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actress)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @if (User.Identity.Name == "admin@admin.com")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actress)
                </td>

                <td>
                    @if (User.Identity.Name != "admin@admin.com")
                    {
                     @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
